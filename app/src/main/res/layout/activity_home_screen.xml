<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eoghan.projectv2.HomeScreen"
    android:background="@color/abc_input_method_navigation_guard">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGolfers"
        android:layout_alignBottom="@+id/btnCourses"
        android:layout_alignParentStart="true"
        android:src="@drawable/golfericon"
        android:onClick="gotoGolfers"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:id="@+id/btnCourses"
        android:src="@drawable/coursesicon"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="gotoCourses"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Scores"
        android:id="@+id/btnEnterScores"
        android:onClick="gotoResults"
        android:src="@drawable/scoresicon"
        android:layout_alignTop="@+id/btnLocations"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLocations"
        android:src="@drawable/locations"
        android:onClick="gotoLocations"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="115dp" />

</RelativeLayout>

