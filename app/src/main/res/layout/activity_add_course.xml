            style="@style/EditCourse"
            android:nextFocusDown="@id/hole10ET"
            android:id="@+id/hole9ET"/>

        <TextView
            style="@style/EditCourseTV"
            android:text="@string/hole18et"/>
        <EditText
            style="@style/EditCourse"
            android:id="@+id/hole18ET"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_course"
        android:id="@+id/add_course"
        android:layout_gravity="center_horizontal" />

</LinearLayout>