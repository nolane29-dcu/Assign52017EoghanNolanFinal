            style="@style/EditCourse"
            android:id="@+id/hole6ET"/>

        <TextView
            style="@style/EditCourseTV"
            android:text="@string/hole15et"/>
        <EditText
            style="@style/EditCourse"
            android:id="@+id/hole15ET" />

    </LinearLayout>

    <LinearLayout
        style="@style/LLEditCourse">

        <TextView
            style="@style/EditCourseTV"
            android:text="@string/hole7et"/>
        <EditText
            style="@style/EditCourse"
            android:id="@+id/hole7ET"/>

        <TextView
            style="@style/EditCourseTV"
            android:text="@string/hole16et"/>
        <EditText
            style="@style/EditCourse"
            android:id="@+id/hole16ET"/>

    </LinearLayout>

    <LinearLayout
        style="@style/LLEditCourse">

        <TextView
            style="@style/EditCourseTV"
            android:text="@string/hole8et"/>
